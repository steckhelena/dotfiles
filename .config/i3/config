bindcode 172 exec "playerctl play-pause"
bindcode 171 exec "playerctl next"
bindcode 121 exec "amixer -q -M set Master toggle"
bindcode 122 exec "amixer -q -M set Master 5%-"
bindcode 123 exec "amixer -q -M set Master 5%+"

