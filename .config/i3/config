# Composite manager
exec --no-startup-id compton -f

# Enables autolock after 15mins
exec --no-startup-id "xautolock -time 15 -locker '~/.config/i3/scripts/lock.sh'"

# Enables lock after sleep
exec --no-startup-id "xss-lock -- ~/.config/i3/scripts/lock.sh"

# System power menu
bindsym $mod+Shift+p exec "~/.config/i3/scripts/sysmenu.sh &"

# System keyboard menu
bindsym $mod+Shift+d exec ~/.config/i3/scripts/kbdlayout.sh

# Disable nvidia power hungry card
exec --no-startup-id "sudo ~/.config/i3/scripts/disable_gpu.sh"

# Network manger GUI
exec --no-startup-id nm-applet

# Enables redshift, to make display warmer
exec --no-startup-id redshift-gtk

# Loads brightness
exec --no-startup-id "~/.config/i3/scripts/backlight_control.sh -l"

